@model ConverterViewModel
@{
    ViewData["Title"] = "Length Converter";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <!-- 1 of 3 -->
    </div>
    <div class="col-6">
      <!-- 2 of 3 (wider) -->
        <form asp-controller="Converter" asp-action="ConvertLength" method="post">
            <div class="form-group">
                <label for="number">Number for Conversion</label>
                <input type="text" class="form-control" id="number" placeholder="Enter Your Number" asp-for="@Model.ValueToConvert">
            </div>
            <div class="form-group">
                <label for="length">Conversion</label>
                <select class="form-control" id="function" asp-for="@Model.ConversionType">
                <option value="FtoM">Feet to Meters</option>
                <option value="FtoY">Feet to Yards</option>
                <option value="MtoF">Meters to Feet</option>
                <option value="MtoY">Meters to Yards</option>
                <option value="YtoF">Yards to Feet</option>
                <option value="YtoM">Yards to Meters</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <div class="col">
      <!-- 3 of 3 -->
    </div>
  </div>
</div>
